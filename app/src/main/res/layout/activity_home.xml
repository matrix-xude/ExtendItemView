<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xxd.extendpopmenu.HomeActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_choice_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circular_bead_choice"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/choice_1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_choice_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circular_bead_choice"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/choice_2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_choice_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circular_bead_choice"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/choice_3"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_choice_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circular_bead_choice"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/choice_4"
            android:textColor="@color/black" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
